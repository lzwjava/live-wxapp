@import '../../lib/wemark/wemark.wxss'

.intro-view {
  background-color: #e7e7e7;
}

.cover-section .cover {
  width: 100%;
}

.title-label {
	font-size: 16px;
	margin: 10px 0;
	color: #828282;
}

/*card-group*/

.card-group {
	margin-top: 20rpx;
	background-color: #fff;
	padding: 20rpx;
}

/*header-section*/

.header-section .avatar {
	width: 120rpx;
	height: 120rpx;
	display: inline-block;
  border-radius: 50%;
}

.header-section .header-right {
	width: 70%;
	margin-left: 10rpx;
	vertical-align: top;
	display: inline-block;
}

.header-section .header-right .subject {
	margin-top: 10rpx;
	font-size: 36rpx;
	font-weight: bold;
	overflow: hidden;
	line-height: 60rpx;
	max-height: 120rpx;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}

.header-section .header-right .ownername {
	margin-top: 10rpx;
	font-size: 32rpx;
	display: inline-block;
}

/*time-section*/

.time-section {
	border-top: 1px dashed #e7e7e7;
}

.time-section .time-label {
	margin-top: 20rpx;
	color: #828282;
}

.time-section .plan-time {
	margin-top: 10rpx;
	font-size: 32rpx;
}

.time-section .right-corner {
	float: right;
	margin-top: 20rpx;
	color: #828282;
}

.time-section .right-corner .status {
	border: 1px solid #828282;
	border-radius: 6rpx;
	padding: 0 6rpx;
	font-size: 28rpx;
}

.time-section .right-corner .status.live-on {
	color: #fff;
	background-color: #00bdef;
	border-color: #64b3f1;
}

.time-section .right-corner .feedback {
	margin-top: 16rpx;
	font-size: 28rpx;
	line-height: 50rpx;
}

/*attend-summary-section*/

.attend-summary-section .attend-info {
	margin: 10rpx 0;
}

.attend-summary-section ul {
	display: inline-block;
	margin: 0;
}

.attend-summary-section ul li {
	display: inline-block;
	margin: 0 10rpx;
}

.attend-summary-section ul li .avatar {
	width: 50rpx;
	height: 50rpx;
  border-radius: 50%;
}

.attend-summary-section .attend-summary {
	float: right;
	line-height: 64rpx;
	font-size: 28rpx;
}

/*attend-section*/

.attend-section {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 110rpx;
	display: flex;
}

.attend-section .attend-btn {
	font-size: 28rpx;
	border-radius: 0px !important;
	flex: 1;
	background: #00bdef;
	color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
}

.attend-section .attend-btn .origin {
	font-size: 13px;
	text-decoration: line-through;
}

.attend-section .attend-btn .share-tips {
	font-size: 13px;
	color: #fff;
}

.detail-section {
  margin-bottom: 110rpx;
}

.wemark_inline_text {
  word-wrap: break-word;
}
