<!--index.wxml-->
<view class="container">

  <view class="lives">

      <view class="live-item" wx:for="{{lives}}" wx:for-item="live">

        <image class="avatar" src="{{live.owner.avatarUrl}}" mode="aspectFill"></image>

        <view class="live-info">

              <text class="subject">{{live.subject}}</text>
              <text class="owner-name">{{live.owner.username}}</text>
              <view class="live-item-tag">
                <text class="time-label" wx:if="{{live.status == 10}}">
                  {{live.timeGap}}  开始
                </text>

                <text class="on-label" wx:if="{{live.status == 20 || live.status == 25}}">
                  正在直播
                </text>

                <text class="attend-label" wx:if="{{live.status == 30 || live.status == 35}}">
                  {{live.attendanceCount}} 人参与
                </text>

              </view>
          </view>
      </view>

  </view>

