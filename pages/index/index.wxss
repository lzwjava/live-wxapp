/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.lives {
  width: 100%;
  height: 100%;
}

.live-item {
	background-color: #fff;
	height: 80px;
	padding: 10px 10px;
	position: relative;
	border-bottom: 1px solid #eee;
}

.live-item .avatar {
	width: 50px;
	height: 50px;
	display: inline-block;
	margin-top: 15px;
  border-radius: 50%;
}

.live-item .live-info {
  display: inline-block;
  position: absolute;
  top: 10px;
  bottom: 10px;
  left: 70px;
  right: 24px;
  height: 80px;
}

.live-item .live-info .owner-name {
	color: #6e6e6e;
  display: block;
  font-size: 14px;
}

.live-item .live-info p.subject {
	height: 30px;
	overflow: hidden;
	text-overflow: ellipsis;
	word-wrap: break-word;
	font-weight: bold;
}

.live-item .live-info .on-label {
	color: #fff;
	background-color: #00bdef;
	border-color: #64b3f1;
	border-radius: 3px;
	font-size: 14px;
	line-height: 18px;
	padding: 3px 5px;
	font-size: 14px;
}

.live-item .live-info .time-label {
	color: #00bdef;
	border: 1px solid #00bdef;
	border-radius: 3px;
	padding: 2px 3px;
	font-size: 14px;
}

.live-item .live-info .attend-label {
	font-size: 14px;
}

.live-item .arrow {
	float: right;
	color: #cecee0;
	width: 24px;
	height: 24px;
	margin-top: 25px;
}
