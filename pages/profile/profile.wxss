.profile-view {
  width: 100%;
  height: 100vh;
  background-color: #ECEBF3;
  padding-top: 30rpx;
}

.cell {
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.user-cell {
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-cell .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.user-cell .username {
  flex-grow: 1;
  margin-left: 20rpx;
  font-size: 44rpx;
}

.contact-area {
  background-color: rgba(0,0,0,0.3);
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  border-radius: 5rpx;
}

.contact-area .title {
  font-size: 28rpx;
  color: #fff;
}
