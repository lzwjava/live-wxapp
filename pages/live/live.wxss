@import '../../lib/wemark/wemark.wxss'

.live-view {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background-image: url('http://mres.quzhiboapp.com/blur.jpg');
	background-repeat: no-repeat;
	background-size: cover;
}

.player-area {
	width: 100%;
  height: 469rpx;
	position: relative;
	background-color: #383838;
	top: 0;
	left: 0;
	right: 0;
}

.player-area .big-title {
	text-align: center;
	color: #fff;
	font-size: 36rpx;
}

.player-area .middle-title {
	text-align: center;
	color: #fff;
	font-size: 28rpx;
}

.player-area .small-title {
	text-align: center;
	color: #bebebe;
	font-size: 28rpx;
}

.player-area .video-common {
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.player-area .video-wait .qrcode {
	width: 160rpx;
	margin-top: 10rpx;
}

.player-area .video-on {
	position: relative;
	width: 100%;
	height: 100%;
}

.player-area .video-on video {
  width: 100%;
	height: 100%;
	overflow: initial;
}

.video-poster-cover {
	text-align: center;
	background: rgba(0,0,0,0.5);
  position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
  z-index: 10;
}

.video-poster-cover .cover-image {
  width: 100%;
}

.video-poster-cover .video-center {
	position: absolute;
	width: 140rpx;
	height: 140rpx;
	left: 50%;
	top: 50%;
	margin-left: -70rpx;
	margin-top: -70rpx;
}

.video-poster-cover .video-center .loading-img {
	width: 100%;
	height: 100%;
	animation: circle 1s cubic-bezier(0, 0, 0.76, 0.77) infinite;
}

.video-poster-cover .video-center .canplay {
	width: 100%;
	height: 100%;
	background: url("http://mres.quzhiboapp.com/video-play.png") center no-repeat;
	background-size: 100% 100%;
}

/*tab-area*/

.tab-area {
	display: flex;
	width: 100%;
	height: 70rpx;
	z-index: 10;
}

.tab-area .tab-item {
	flex-grow: 1;
	text-align: center;
	line-height: 70rpx;
	transition: all 0.5s ease;
	color: #828282;
}

.tab-area .tab-item.active {
	color: #00BDEF;
	border-bottom: 1px solid #00BDEF;
}

.tab-sub-area {
	padding: 10rpx;
	box-sizing: border-box;
	width: 100%;
	position: absolute;
  top: 540rpx;
	bottom: 0;
	left: 0;
	right: 0;
	transition: all 0.5s ease;
}

.chat-area .msg-list {
	position: absolute;
	top: 10rpx;
	bottom: 90rpx;
}

/*system-msg*/
.system-msg {
	margin-bottom: 0px;
	text-align: center;
}

.system-msg .content {
	border-radius: 3px;
	background-color: #dcdcdc;
	font-size: 24rpx;
	padding: 2rpx 16rpx;
	color: #fff;
	display: inline-block;
}

/*bubble-msg*/

.bubble-msg {
	min-height: 60rpx;
	padding: 5rpx 10rpx;
}

.bubble-msg .avatar {
	border-radius: 50%;
	width: 60rpx;
	height: 60rpx;
	margin-top: 10rpx;
	vertical-align: top;
}

.bubble-msg .right-view {
	display: inline-block;
	margin-left: 10rpx;
}

.right-view .name {
	color: #ECECEC;
	opacity: 0.8;
	font-size: 24rpx;
}

.right-view .content {
	color: #fff;
	max-width: 600rpx;
	position: relative;
}

.right-view .content::after {
	content: '';
	background-color: #819EC9;
	opacity: 0.3;
	filter: blur(2px);
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	border-radius: 3px;
}

.right-view .content .text-content {
	font-size: 28rpx;
	padding: 10rpx 10rpx;
	line-height: 35rpx;
	word-wrap: break-word;
	text-shadow:#000 2px 2px 3px;
	z-index: 3;
}

.text-content.plain-text {
	color: #fff;
}

.text-content.reward-text {
	color: #FF4747;
}

/*new-msg-btn*/

.chat-area .new-msg-btn {
	background-color: #00BDEF;
	border-radius: 20rpx;
	color: #fff;
	position: absolute;
	bottom: 120rpx;
	left: 250rpx;
	right: 250rpx;
	width: 250rpx;
	text-align: center;
	font-size: 28rpx;
	height: 50rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.chat-area .online-num {
	z-index: 30;
	float: right;
	font-size: 24rpx;
	color: #ECECEC;
	margin-right: 20rpx;
}

/*send-area*/

.send-area {
	position: absolute;
	height: 90rpx;
	bottom: 0rpx;
	width: 730rpx;
	box-sizing: border-box;
	padding-top: 10rpx;
	padding-left: 10rpx;
	padding-right: 10rpx;
	padding-bottom: 10rpx;
	display: flex;
}

.send-area .bg {
	background-color: #819EC9;
	opacity: 0.3;
	filter: blur(2px);
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	border-radius: 3px;
}

.send-area .input-area {
	flex-grow: 1;
	display: inline-block;
	height: 70rpx;
	box-sizing: border-box;
	padding-left: 20rpx;
	padding-right: 20rpx;
	padding-top: 5rpx;
	padding-bottom: 5rpx;
	margin-right: 10rpx;
	position: relative;
}

.send-area .input-area:after {
	content: '';
	background-color: #000;
	opacity: 0.3;
	position:absolute;
  top:0;
  left:0;
	right: 0;
	bottom: 0;
	border-radius: 5px;
}

.send-area .text-input {
	color: #fff;
	font-size: 32rpx;
	height: 60rpx;
	min-height: initial;
}

.send-area .btn-send {
	width: 60rpx;
	height: 60rpx;
	display: inline-block;
	background-size: cover;
	background-repeat: no-repeat;
}

.btn-send.normal {
	background-image: url('http://mres.quzhiboapp.com/send_normal.png');
}

.btn-send.active {
	background-image: url('http://mres.quzhiboapp.com/send_active.png');
}
