@import '../../lib/wemark/wemark.wxss'

.player-area {
	width: 100%;
  height: 469rpx;
	position: relative;
	background-color: #383838;
}

.player-area .big-title {
	text-align: center;
	color: #fff;
	font-size: 18px;
}

.player-area .middle-title {
	text-align: center;
	color: #fff;
	font-size: 14px;
}

.player-area .small-title {
	text-align: center;
	color: #bebebe;
	font-size: 14px;
}

.player-area .video-common {
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100%;
	flex-direction: column;
}

.player-area .video-wait .qrcode {
	width: 80px;
	margin-top: 5px;
}

.player-area .video-on video {
  width: 100%;
}

.video-poster-cover {
	text-align: center;
	background: rgba(0,0,0,0.5);
  position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
}

.video-poster-cover .cover-image {
  width: 100%;
}

.video-poster-cover .video-center {
	position: absolute;
	width: 70px;
	height: 70px;
	left: 50%;
	top: 50%;
	margin-left: -35px;
	margin-top: -35px;
}

.video-poster-cover .video-center .loading-img {
	width: 100%;
	height: 100%;
	animation: circle 1s cubic-bezier(0, 0, 0.76, 0.77) infinite;
}

.video-poster-cover .video-center .canplay {
	width: 100%;
	height: 100%;
	background: url("../../img/video-play.png") center no-repeat;
	background-size: 100% 100%;
}

.tab-area {
	display: flex;
	height: 70rpx;
}

.tab-area .tab-item {
	flex-grow: 1;
	background-color: #f5f5f5;
	text-align: center;
	line-height: 70rpx;
	transition: all 0.5s ease;
	color: #828282;
}

.tab-area .tab-item.active {
	color: #00BDEF;
	border-bottom: 1px solid #00BDEF;
}
